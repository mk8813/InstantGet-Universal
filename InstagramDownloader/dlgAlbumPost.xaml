                                    <Button.Transitions>
                                        <TransitionCollection>
                                            <EdgeUIThemeTransition Edge="Left"></EdgeUIThemeTransition>
                                        </TransitionCollection>
                                    </Button.Transitions>
                                    <Button.Background>
                                        <ImageBrush ImageSource="{Binding Typename, Converter={StaticResource getPostTypeThumbnail}}"></ImageBrush>
